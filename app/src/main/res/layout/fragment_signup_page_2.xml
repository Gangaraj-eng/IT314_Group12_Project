<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/go_back"
                android:src="@drawable/back_btn"
                android:backgroundTint="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sarala"
                android:text="Complete your profile"
                android:textColor="@color/black"
                android:textSize="22sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="25dp"
                android:fontFamily="@font/sarala"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="22sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginHorizontal="20dp"
                android:background="@drawable/text_box_background"
                android:elevation="4dp"
                android:hint="Enter your name"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="25dp"
                android:fontFamily="@font/sarala"
                android:text="Date of birth"
                android:textColor="@color/black"
                android:textSize="22sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="25dp"
                android:layout_height="wrap_content"
                >

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="80dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/day_spinner"

                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="80dp"
                    android:id="@+id/month_spinner"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="100dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/year_spinner"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                >
                <EditText
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:hint="Age"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/text_box_background"
                    android:elevation="4dp"
                    android:inputType="textPersonName"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:paddingTop="10dp"
                    android:id="@+id/gender_select"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:text="Gender"
                    android:drawableEnd="@drawable/baseline_arrow_drop_down_24_white"
                    android:textColor="@color/white"
                    android:background="@drawable/text_box_background"

                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="25dp"
                android:fontFamily="@font/sarala"
                android:text="Mobile"
                android:textColor="@color/black"
                android:textSize="22sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginHorizontal="20dp"
                android:background="@drawable/text_box_background"
                android:elevation="4dp"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="25dp"
                android:fontFamily="@font/sarala"
                android:text="Address line 1"
                android:textColor="@color/black"
                android:textSize="22sp" />
            <EditText
                android:id="@+id/address_line_1"
                android:layout_width="match_parent"
                android:minHeight="45dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/text_box_background"
                android:elevation="4dp"
                android:inputType="textMultiLine"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

 <TextView
     android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="25dp"
                android:fontFamily="@font/sarala"
                android:text="Address line 2 (optional)"
                android:textColor="@color/black"
                android:textSize="22sp" />
            <EditText
                android:id="@+id/address_line_2"
                android:layout_width="match_parent"
                android:minHeight="45dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/text_box_background"
                android:elevation="4dp"

                android:inputType="textMultiLine"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="20dp"
                >
                <EditText
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/text_box_background"
                    android:elevation="4dp"
                    android:hint="city"
                    android:inputType="textPersonName"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textColorHint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
<EditText
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"

                    android:background="@drawable/text_box_background"
                    android:elevation="4dp"
                    android:layout_marginStart="10dp"
                    android:hint="state"
                    android:inputType="textPersonName"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>
 <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="20dp"
                >
                <EditText
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/text_box_background"
                    android:elevation="4dp"
                    android:hint="pincode"
                    android:inputType="textPersonName"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textColorHint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
<EditText
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"

                    android:background="@drawable/text_box_background"
                    android:elevation="4dp"
                    android:layout_marginStart="10dp"
                    android:hint="country"
                    android:inputType="textPersonName"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                >

                <com.google.android.material.button.MaterialButton
                android:id="@+id/next_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:backgroundTint="@color/blue"
                android:text="Next"
                    android:layout_marginHorizontal="10dp"
                android:textAllCaps="false"
                app:cornerRadius="15dp"
                app:iconPadding="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
