<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startups.Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical"
        >
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/ic_app_icon_blue"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in to continue"
            android:textColor="@color/blue"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user type"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/blue"
            app:endIconTint="@color/blue"
            android:layout_gravity="center"
            android:id="@+id/user_type_dropdown"
            android:layout_margin="10dp"
           >
            <AutoCompleteTextView
                android:id="@+id/user_type_selector"
                android:layout_width="wrap_content"
                android:text="Patient"
                android:editable="false"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>
        <RadioGroup
            android:id="@+id/radio_grp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@id/radio_mobile_login"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            >
            <RadioButton
                android:id="@+id/radio_mobile_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:layoutDirection="rtl"
                android:layout_marginHorizontal="10dp"
                android:buttonTint="@color/blue"
                android:text="mobile login"
                android:textSize="14sp" />
            <RadioButton
                android:id="@+id/radio_email_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:buttonTint="@color/blue"
                android:layoutDirection="rtl"
                android:text=" email login  " />

        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/mobile_login_layout"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="25dp"
                android:fontFamily="@font/sarala"
                android:text="Mobile"
                android:textColor="@color/black"
                android:textSize="22sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edit_text_background"
                android:elevation="4dp"
                android:hint="Enter mobile number"
                android:inputType="number"
                android:drawableEnd="@drawable/ic_call"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/email_login_layout"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="25dp"
                android:fontFamily="@font/sarala"
                android:text="email"
                android:textColor="@color/black"
                android:textSize="22sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edit_text_background"
                android:elevation="4dp"
                android:hint="Enter email"
                android:inputType="textEmailAddress"
                android:drawableEnd="@drawable/ic_email"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                />
<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
    android:layout_marginTop="15dp"
                android:layout_marginHorizontal="25dp"
                android:fontFamily="@font/sarala"
                android:text="passwrod"
                android:textColor="@color/black"
                android:textSize="22sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edit_text_background"
                android:elevation="4dp"
                android:hint="Enter password"
                android:inputType="textEmailAddress"
                android:drawableEnd="@drawable/ic_eye_open"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/email_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@color/blue"
                android:text="login"
                android:textAllCaps="false"
                app:cornerRadius="10dp"
                app:iconPadding="10dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>