<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextViewgi
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-450dp"
        android:textStyle="bold"
        android:text="Enter relative details \n\n\n Relative 1 \n"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-370dp"
        android:layout_marginEnd="190dp"
        android:textStyle="bold"
        android:text="Name"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457" />

    <EditText
        android:id="@+id/editTextTextPersonName1"
        android:layout_width="266dp"
        android:layout_height="39dp"
        android:layout_margin="25dp"
        android:background="@drawable/temp_bg"
        android:drawableEnd="@drawable/ic_baseline_email_24"
        android:elevation="4dp"
        android:hint="Enter relative name"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.208" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-370dp"
        android:layout_marginEnd="190dp"
        android:textStyle="bold"
        android:text="Contact Number"
        android:textColor="#0B0909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="266dp"
        android:layout_height="39dp"
        android:layout_margin="25dp"
        android:background="@drawable/temp_bg"
        android:drawableEnd="@drawable/ic_baseline_email_24"
        android:elevation="4dp"
        android:hint="Enter contact number"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349" />

    <Button
        android:id="@+id/customButton3"
        android:layout_width="279dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="#4799FA"
        android:text="Add Relative"
        android:textColor="#FAF8F8"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="327dp" />

    <Button
        android:id="@+id/customButton4"
        android:layout_width="140dp"
        android:layout_height="37dp"
        android:layout_centerInParent="true"
        android:background="#4799FA"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="395dp" />


</androidx.constraintlayout.widget.ConstraintLayout>