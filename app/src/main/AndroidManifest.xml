<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IT314_Health_Center"
        tools:targetApi="31">
        <activity
            android:name=".startups.user_details"
            android:exported="true"
            android:theme="@style/BlueStatusBar">

        </activity>
        <activity
            android:name=".startups.Login"
            android:theme="@style/BlueStatusBar"
            android:exported="true">
        </activity>
        <activity
            android:name=".startups.Signup"
            android:exported="true"
            android:theme="@style/BlueStatusBar" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".startups.SplashScreen"
            android:exported="true"
            android:theme="@style/SplashTheme" />
        <activity
            android:name=".EmailVerificationAfterSignUp"
            android:exported="true"
            android:theme="@style/BlueStatusBar" />
        <activity
            android:name=".EmailNotVerified"
            android:exported="true"
            android:theme="@style/BlueStatusBar" />
    </application>

</manifest>